{
	"name": "asanaplugins/easy-whatsapp",
	"description": "Whatsapp chat for Wordpress Plugin.",
	"homepage": "https://asanaplugins.com/",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
		"woocommerce",
		"whatsapp"
	],
	"license": "GPL-3.0-or-later",
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require-dev": {
		"woocommerce/woocommerce-sniffs": "0.1.0",
		"phpunit/phpunit": "^7",
		"roots/wordpress": "^6.0",
		"wp-phpunit/wp-phpunit": "^6.0",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"AsanaPlugins\\WhatsApp\\": "src/"
		},
		"files": [
			"src/Helpers.php",
			"src/Helpers/Badges.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"AsanaPlugins\\WhatsApp\\Tests\\": "tests/php"
		}
	},
	"scripts": {
		"phpcs": [
			"phpcs --extensions=php -s -p"
		],
		"phpcbf": [
			"phpcbf --extensions=php -p"
		],
		"test": "phpunit"
	},
	"extra": {
		"scripts-description": {
			"phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
			"phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
		}
	}
}
